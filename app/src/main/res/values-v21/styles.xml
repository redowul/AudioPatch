<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/recyclerViewDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:itemBackground">@color/recyclerViewPrimary</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="NavigationView">
        <item name="android:textColorSecondary">@color/iconColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
        <item name="android:itemBackground">@drawable/popup_menu_corners</item>
        <item name="android:colorBackground">@color/recyclerViewPrimary</item>
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
    </style>

    <style name="NearbyConnectionsAlertDialog">
        <item name="android:textColorPrimary">@color/colorPrimaryAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/recyclerViewDark</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="EditUnderBar" parent="android:Widget.Holo.Light.TextView">
        <item name="colorControlNormal">@color/textColor</item>
        <item name="colorControlActivated">@color/textColor</item>
        <item name="colorControlHighlight">@color/textColor</item>
    </style>
</resources>